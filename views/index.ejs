<body>
  <%- include("partials/navbar") %>
  <header>
    <div id="flex">
      <div id="textPart">
        <p id="cc">CODING CLUB</p>
        <p id="nm">NIT MEGHALAYA</p>
        <button class="button">
          <img src="landing_page/assets/images/mail.svg" alt="" id="mail" />
          <span id="contact">CONTACT US</span>
        </button>
      </div>
    </div>


    <!-- //////////////////////////////////////////////////////////////////// -->

    <div id="contactForm">
            
      <div id="id01" class="contactContent">
        <span value="close" onClick="CloseAndRefresh();" class="close" title="Close">&times;</span>
        <h2>How can we help you?</h2>
        <small>We'll get back to you as soon as possible</small>
        <form method="POST" autocomplete="off" name="Contact">
          <input placeholder="Name" name="Name" type="text" required />
          <input placeholder="Email" name="Email" type="email" required />
          <input placeholder="Subject" name="subject" type="text" required />
          <textarea placeholder="Message" name="comment"></textarea>
          <button class="formBtn" type="submit">Submit</button>
        </form>
      </div>
    
    </div>
    <script>
      const scriptURL =
        "https://script.google.com/macros/s/AKfycbwWvG5mGFe8VyCv0cxKVhxzuxhQGQVauCg_s_JxMap65_j5l552E8ZCt7DYOrzLrwZ74A/exec";
      const form = document.forms["Contact"];

      form.addEventListener("submit", (e) => {
        e.preventDefault();
        fetch(scriptURL, {
            method: "POST",
            body: new FormData(form),
          })
          .then((response) =>
            alert("Thanks for Contacting us..! We Will Contact You Soon...")
          )
          .catch((error) => console.error("Error!", error.message));
      });
    </script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <!-- ///////////////////////////////////////////////////////////////////////////// -->
