  }

  #logo img {
    width: 8vw;
    margin: 10px 0;
  }

  /* *************background-color_class***************** */
  .bgColor {
    background-color: rgba(75, 41, 124, 0.5);
    width: 100%;
    position: fixed;
    /* -webkit-position:sticky; */
    /* top:0; */
    z-index: 100;
  }

  /* *****animation styling******** */
  .button_scroll {
    fill: unset;
    border: none;
